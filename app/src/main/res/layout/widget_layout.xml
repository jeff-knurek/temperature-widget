<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left column: location, C temp, rain/humidity/dew -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Getting location..."
                android:textColor="#CCFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp_celsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="--°C"
                android:textColor="#FFFFFF"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rain_chance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rain (3h): --%"
                android:textColor="#CCFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity: --%"
                android:textColor="#CCFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dew_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dew: --°"
                android:textColor="#CCFFFF"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Right column: F temp top-right + 2-column layout (Tomorrow / Day after) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/temp_fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="sans-serif-light"
                android:gravity="end"
                android:text="--°F"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold" />

            <!-- Replaced TableLayout with a RemoteViews-safe LinearLayout structure -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="end">

                <!-- Tomorrow column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/header_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tomorrow"
                        android:textStyle="bold"
                        android:textColor="#CCFFFF"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:textAlignment="viewEnd" />

                    <ImageView
                        android:id="@+id/icon_tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:contentDescription="Tomorrow icon" />

                    <TextView
                        android:id="@+id/tomorrow_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:textAlignment="viewEnd" />
                </LinearLayout>

                <!-- Day after column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/header_day_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day after"
                        android:textStyle="bold"
                        android:textColor="#CCFFFF"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:textAlignment="viewEnd" />

                    <ImageView
                        android:id="@+id/icon_day_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:contentDescription="Day after icon" />

                    <TextView
                        android:id="@+id/day_after_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:textAlignment="viewEnd" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:fontFamily="monospace"
        android:padding="8dp"
        android:text="--:--"
        android:textColor="#99FFFFFF"
        android:textSize="12sp" />

</FrameLayout>
