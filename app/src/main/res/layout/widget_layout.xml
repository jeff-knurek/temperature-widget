<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/widget_background">

        <!-- Temperature block -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/temp_celsius"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--째C"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />
            <TextView
                android:id="@+id/temp_fahrenheit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="--째F"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <!-- Weather details row: humidity/dew point | rain chance/forecast -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <!-- Left: Humidity & Dew Point -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">
                <TextView
                    android:id="@+id/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity: --%"
                    android:textSize="14sp"
                    android:textColor="#CCFFFF" />
                <TextView
                    android:id="@+id/dew_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dew: --째"
                    android:textSize="14sp"
                    android:textColor="#CCFFFF" />
            </LinearLayout>
            <!-- Right: Rain chance & Tomorrow forecast -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:id="@+id/rain_chance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rain (3h): --%"
                    android:textSize="14sp"
                    android:textColor="#CCFFFF" />
                <TextView
                    android:id="@+id/tomorrow_forecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tomorrow: --째F / --%"
                    android:textSize="14sp"
                    android:textColor="#CCFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location name centered -->
        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Getting location..."
            android:textSize="18sp"
            android:textColor="#CCFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--"
        android:textSize="12sp"
        android:textColor="#99FFFFFF"
        android:layout_gravity="bottom|end"
        android:padding="8dp"
        android:fontFamily="monospace"/>

</FrameLayout>
