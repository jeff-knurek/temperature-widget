<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Widget refresh interval in milliseconds (5 minutes for development) -->
    <integer name="widget_update_interval_ms">300000</integer>

    <!-- Widget dimensions for Fire 7 tablet -->
    <dimen name="widget_min_width">640dp</dimen>
    <dimen name="widget_min_height">360dp</dimen>

    <!-- Text sizes for different elements -->
    <dimen name="temp_text_size">48sp</dimen>
    <dimen name="location_text_size">16sp</dimen>
    <dimen name="detail_text_size">12sp</dimen>

    <!-- Weather API configuration -->
    <string name="weather_api_base_url">https://api.open-meteo.com/v1/forecast</string>
    <string name="weather_api_params">hourly=dew_point_2m,temperature_2m,relative_humidity_2m&amp;current=temperature_2m,relative_humidity_2m&amp;timezone=America/New_York&amp;forecast_days=1&amp;temperature_unit=fahrenheit</string>
</resources>
